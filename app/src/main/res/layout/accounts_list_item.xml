<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/account_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/account_item_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/abc_action_bar_home_description"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/account_item_name" style="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/account_item_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone"/>

            <Button
                android:id="@+id/button_pinterest_board_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_transparent"
                style="@style/buttonLinkBlue"
                android:visibility="gone"/>

            <Button
                android:id="@+id/button_pinterest_board_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_transparent"
                style="@style/buttonLinkRed"
                android:visibility="gone"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/account_item_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"></LinearLayout>

</LinearLayout>